{
  "name": "sgc-desktop",
  "main": "public/electron.js",
  "homepage": "./",
  "version": "4.1.7",
  "author": "SGC Desktop",
  "description": "Sistema de Gestão Condominial - Solução completa para administração de condomínios",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@mui/icons-material": "^5.15.20",
    "@mui/material": "^5.15.20",
    "@mui/x-date-pickers": "^8.12.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "dayjs": "^1.11.18",
    "electron-updater": "^6.6.2",
    "exceljs": "^4.4.0",
    "jspdf": "^3.0.3",
    "jspdf-autotable": "^5.0.2",
    "knex": "^3.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-imask": "^7.6.1",
    "react-router-dom": "^6.23.1",
    "react-scripts": "5.0.1",
    "sqlite3": "^5.1.7",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "clean": "rimraf build node_modules/.cache",
    "electron:start": "npm run clean && concurrently \"npm start\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "electron:fast": "concurrently \"npm start\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "electron:only": "electron .",
    "start": "cross-env BROWSER=none react-scripts start",
    "build": "react-scripts build",
    "electron:build": "npm run build && electron-builder",
    "electron:dist": "npm run build && electron-builder --publish=never",
    "electron:pack": "npm run build && electron-builder --dir",
    "electron:simple": "npm run build && electron-builder --win --x64 --dir",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "depcheck": "^1.4.0",
    "electron": "^38.2.1",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "rimraf": "^6.0.1",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.sgc.desktop",
    "productName": "SGC Desktop - Sistema de Gestão Condominial",
    "copyright": "Copyright © 2024 SGC Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "public/preload.js",
      "public/splash.html",
      "public/favicon.ico",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SGC Desktop",
      "installerIcon": "public/favicon.ico",
      "uninstallerIcon": "public/favicon.ico"
    },
    "compression": "store",
    "forceCodeSigning": false,
    "publish": [
      {
        "provider": "github",
        "owner": "LiroLittleDev",
        "repo": "SGC-CONDOMINIO"
      }
    ]
  }
}
